<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
<head>
  <title></title>
  <script src      = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <style type      = "text/css" media="screen">
  .div {
    padding-top: 1em;
  }
  </style>
</head>
<body>

  <div id          = "time"><h3>TIME files</h3></div>
  <div id          = "dstat"><h3>DSTAT files</h3></div>
  <div id          = "nmon"><h3>NMON files</h3></div>
  <div id          = "config"><h3>CONFIG files</h3></div>
  <div id          = "perf"><h3>PERF files</h3></div>
  <div id          = "all"><h3>All files</h3></div>

  <script>
  
  (function(){
    var f_types = ['dstat', 'nmon', 'config', 'time', 'perf'];
    f_types.forEach(function(name){
      $('#' + name).hide();
    });
    
    $.ajax({
      url: ".",
      success: function(data){
        $(data).find("a").each(function(){
          $this      = $(this);
          // will loop through 
          var link   = $this.attr("href");
        
          f_types.forEach(function(name){
            $('#' + name).show();
            if (link.indexOf(name) != -1){
              // console.log(link[0]);

              $('<a></a>', {
                text: link,
                href: link
              }).append('<br/>').appendTo('#' + name)
            }
            if (name == 'dstat' & link[0] != '?'){
              $('<a></a>', {
                text: link,
                href: link
              }).append('<br/>').appendTo('#all')
            }
          });

        });
      }
    });
  })();
  </script>
</body>
</html>
